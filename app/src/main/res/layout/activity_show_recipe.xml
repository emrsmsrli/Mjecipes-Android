<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show_recipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="se.ju.student.android_mjecipes.ShowRecipeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="true"
        android:animateLayoutChanges="false">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="3"
            android:columnCount="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:srcCompat="@android:color/holo_blue_bright"
                android:id="@+id/show_recipe_img"
                android:adjustViewBounds="true"
                android:layout_rowWeight="2"
                android:scaleType="fitCenter" />

            <TextView
                android:text="NAME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/show_recipe_name"
                android:textSize="22sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:text="DESC"
                android:layout_width="319dp"
                android:layout_height="138dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:id="@+id/show_recipe_desc" />

        </GridLayout>
    </ScrollView>

    <Button
        android:text="@string/show_recipe_directions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:id="@+id/show_recipes_b_directions" />

    <Button
        android:text="@string/show_recipe_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="23dp"
        android:id="@+id/show_recipes_b_comments"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
