<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    android:id="@+id/main_recipe_layout"
    android:scrollbars="vertical"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/main_recipe_id" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_height"
        android:id="@+id/main_recipe_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_recipe_image"
        android:paddingTop="5dp"
        android:paddingStart="10dp"
        android:id="@+id/main_recipe_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_recipe_image"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/main_recipe_date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_recipe_image"
        android:paddingTop="27dp"
        android:paddingStart="10dp"
        android:id="@+id/main_recipe_description" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_recipe_image"
        android:paddingTop="47dp"
        android:paddingStart="10dp"
        android:id="@+id/main_recipe_creatorname" />


</RelativeLayout>
