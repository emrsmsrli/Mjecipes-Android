<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign__in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="se.ju.student.android_mjecipes.Sign_In">

    <Button
        android:text="SÄ±gn Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:id="@+id/bsignin"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/username"
        android:layout_marginBottom="128dp" />

    <TextView
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enterpassword"
        android:layout_below="@+id/hiddenpassword"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="49dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/enterusername"
        android:hint="Enter a user name"
        android:layout_above="@+id/bsignin"
        android:layout_alignStart="@+id/enterpassword"
        android:layout_marginBottom="31dp" />

    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/enterpassword"
        android:layout_marginTop="9dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/hiddenpassword"
        android:hint="Enter a password"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/username"
        android:layout_alignStart="@+id/enterpassword" />

    <TextView
        android:text="Inputs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputs"
        android:layout_alignTop="@+id/bsignin"
        android:layout_alignStart="@+id/enterusername"
        android:layout_marginTop="81dp" />

</RelativeLayout>
