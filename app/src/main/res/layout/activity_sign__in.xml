<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="se.ju.student.android_mjecipes.SignupActivity"
    android:id="@+id/sign_up">


    <TextView
        android:text="User Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/textView"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/enterusername"
        android:inputType="text"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        />

    <TextView
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:inputType="text"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/hiddenpassword"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="140dp"
         />

    <TextView
        android:text="Password again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView45"
        android:inputType="text"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="180dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/hiddenpasswordcorrection"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="220dp"
        />

    <Button
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/bsignin"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="280dp"
        />

    <CheckBox
        android:text="Use my location informations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bsignin"
        android:layout_alignStart="@+id/hiddenpasswordcorrection"
        android:id="@+id/checkBox"
        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
        android:onClick="selectitem"
         />

</RelativeLayout>
